<%= form_for invite, :url => invites_path do |f| %>
  <%= f.hidden_field :course_id, :value => course.id %>
  <%= f.hidden_field :user_role, :value => role %>
  <%= f.label :email %>
  <%= f.email_field :email %>
  <%= f.label :university_id do %>University ID
    <%= f.text_field :university_id %>
  <% end %>
  <%= f.submit 'Send' %>
<% end %>
