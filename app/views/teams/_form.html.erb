<%= form_for [@course, team] do |f| %>
    <% if team.id.present? %>
      <%= f.hidden_field :id, :value => team.id %>
    <% end %>
    <% if !team.course_id.present? %>
      <%= f.hidden_field :course_id, :value => @course.id %>
    <% end %>
    <%= f.label :name %><br>
    <%= f.text_field :name %>
    <%= f.button 'Save', :class => 'tiny right', :type => 'submit' %>
<% end %>
