<%= stylesheet_link_tag    'validate', media: 'all', 'data-turbolinks-track' => true %>
<%= stylesheet_link_tag    'jquery.idealforms', media: 'all', 'data-turbolinks-track' => true %>

<%= form_for submission do |f| %>

<p><strong>Grading for <%= submission.assignment.name %> by <%= submission.submitter.name %></strong></p>
  <%= f.label :name do %>Grade <small>required</small>
  <%= f.number_field :grade, value: submission.grade %>
  <% end %>
  <%= f.label :slug do %>Feedback
  <%= f.text_area :feedback, value: submission.feedback %>
  <% end %>
  <%= f.button 'Save', :class => 'tiny right', :type => 'submit' %>
<% end %>
