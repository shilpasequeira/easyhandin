<%= stylesheet_link_tag    'jquery.dataTables.min', media: 'all', 'data-turbolinks-track' => true %>
<%= stylesheet_link_tag    'footable.core', media: 'all', 'data-turbolinks-track' => true %>
<%= stylesheet_link_tag    'footable.standalone', media: 'all', 'data-turbolinks-track' => true %>
<%= stylesheet_link_tag    'footable-demos', media: 'all', 'data-turbolinks-track' => true %>
<%= stylesheet_link_tag    'validate', media: 'all', 'data-turbolinks-track' => true %>
<%= stylesheet_link_tag    'jquery.idealforms', media: 'all', 'data-turbolinks-track' => true %>

<div id="response_data">
  <p></p>
</div>

<!-- Container Begin -->
<div class="row">
  <div class="large-12 columns">
    <div class="box">
      <!-- /.box-header -->
      <div class="box-body " style="display: block;">
        <div class="school-timetable">
          <!-- tools box -->
          <div class="pull-right box-tools">
            <% if current_user.instructor? %>
            <span class="box-btn" data-widget="edit">
              <%= link_to edit_assignment_path(@assignment) do %>
                <i class="fontello-pencil" title="edit"></i>
              <% end %>
            </span>
            <span class="box-btn" data-widget="delete">
              <%= link_to @assignment, method: :delete, data: { confirm: 'Are you sure?' } do %>
                <i class="fontello-trash-2" title="delete"></i>
              <% end %>
            </span>
            <% end %>
            <span class="box-btn" >
              <%= link_to course_assignments_path(@assignment.course) do %>
                <i class="fontello-reply" title="back"></i>
              <% end %>
            </span>
          </div>
          <h5>
            <%= link_to @assignment do %>
            <i class="fontello-doc-1"></i> <strong><%= @assignment.name %></strong>
            <% end %>
          </h5>
        <hr>
        <div class="row">
          <div class="large-12 columns">
          </div>
        </div>
        <div class="row">
          <div class="large-2 columns">
            <h6>Course:</h6>
          </div>
          <div class="large-10 columns">
            <h6><i class=" fontello-tag"></i><span class="bg-green"><%= @assignment.course.name %></span></h6>
          </div>
        </div>
        <div class="row">
          <div class="large-2 columns">
            <h6>Programming Language:</h6>
          </div>
          <div class="large-10 columns">
            <h6><i class=" fontello-desktop-1"></i> <%= @assignment.language.titleize %></h6>
          </div>
        </div>
        <div class="row">
          <div class="large-2 columns">
            <h6> Is a team assignment?</h6>
          </div>
          <div class="large-10 columns">
            <h6><i class=" fontello-users"></i>&nbsp;<a class="text-gray" href="#"><%= @assignment.is_team_mode %></a></h6>
          </div>
        </div>
        <div class="row">
          <div class="large-2 columns">
            <h6>Deadline: </h6>
          </div>
          <div class="large-10 columns">
            <h6><i class=" fontello-clock"></i>&nbsp;<a class="text-gray" href="#"><%= @assignment.deadline.strftime("%a, %B %-d") %></a>
              <span class="bg-black"><%= @assignment.deadline.strftime("%I:%M %p") %></span>
            </h6>
          </div>
        </div>
        <div class="row">
          <div class="large-2 columns">
            <h6>Grace period:</h6>
          </div>
          <div class="large-10 columns">
            <h6><i class=" fontello-clock"></i>&nbsp;<a class="text-gray" href="#"><%= @assignment.grace_period.strftime("%a, %B %-d") %></a>
              <span class="bg-black"><%= @assignment.grace_period.strftime("%I:%M %p") %></span>
            </h6>
          </div>
        </div>
        <div class="row">
          <div class="large-2 columns">
            <h6>Branch name</h6>
          </div>
          <div class="large-10 columns">
            <h6><i class=" fontello-flow-split"></i>&nbsp;<a class="text-gray" href="#"><%= @assignment.branch_name %></a></h6>
          </div>
        </div>
        <% if @assignment.course.skeleton_repository.present? %>
          <div class="row">
            <div class="large-2 columns">
              <h6>Skeleton code</h6>
            </div>
            <div class="large-10 columns">
              <h6>
                <i class=" fontello-flow-split"></i>
                <%= link_to @assignment.branch_url(@assignment.course.skeleton_repository), @assignment.branch_url(@assignment.course.skeleton_repository), target: "_blank" %>
              </h6>
            </div>
          </div>
        <% end %>
        <% if @assignment.course.test_repository.present? && current_user.instructor? %>
          <div class="row">
            <div class="large-2 columns">
              <h6>Tests</h6>
            </div>
            <div class="large-10 columns">
              <h6>
                <i class=" fontello-flow-split"></i>
                <%= link_to @assignment.branch_url(@assignment.course.test_repository), @assignment.branch_url(@assignment.course.test_repository), target: "_blank" %>
              </h6>
            </div>
          </div>
        <% end %>
        <div class="row">
          <div class="large-2 columns">
            <h6>Is published?</h6>
          </div>
          <div class="large-10 columns">
            <h6><i class=" fontello-lock-open"></i>&nbsp;<a class="text-gray" href="#"><%= @assignment.is_published %></a></h6>
          </div>
        </div>
      </div>
        <hr />
        <div class="row">
          <div class="large-12 columns">
            <% unless @assignment.is_published? %>
              <%= link_to "Publish", publish_assignment_path(@assignment), class: "button tiny right", data: { confirm: 'Are you sure?' } %>
            <% end %>
          </div>
        </div>
      </div>
      <!-- end .timeline -->
    </div>
    <!-- box -->
  </div>
</div>
<!-- End of Container Begin -->

<!-- Container Begin -->
<div class="row">
  <div class="large-12 columns">
    <div class="box bg-white">
      <div class="box-header bg-transparent">
        <h3 class="box-title"><i class="fontello-paper-plane"></i>
          <% if current_user.instructor? %>
          <span>SUBMISSIONS</span>
          <% else %>
          <span>SUBMISSION</span>
          <% end %>
        </h3>
      </div>
      <!-- /.box-header -->
      <% if current_user.instructor? %>
        <% if @assignment.is_team_mode %>
          <%= render 'submissions/team_list' %>
        <% else %>
          <%= render 'submissions/student_list' %>
        <% end %>
      <% else %>      
        <%= render 'submissions/student_submission' %>          
      <% end %>  
      <!-- end of submissions box body -->
    </div>
    <!-- end of submissions box -->
  </div>
  <!-- end of submissions div -->
</div>
<!-- End of Container Begin -->
