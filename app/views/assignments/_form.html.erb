<%= form_for [@course, @assignment] do |f| %>
  <% if @assignment.errors.any? %>
    <div id="error_explanation">
      <p><%= pluralize(@assignment.errors.count, "error") %> prohibited this assignment from being saved:</p>
      <ul>
        <% @assignment.errors.full_messages.each do |message| %>
        <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="row">
    <div class="large-12 columns">
      <form>
        <div class="row">
          <div class="large-4 columns">
            <%= f.label :name do %>Title <small>required</small>
              <%= f.text_field :name %>
            <% end %>
          </div>
          <div class="large-4 columns">
            <%= f.label :branch_name do %>Branch Name <small>required</small>
              <%= f.text_field :branch_name %>
            <% end %>
          </div>
          <div class="large-4 columns">
            <%= f.label :language do %>Programming Language <small>required</small>
              <%= f.select(:language, Assignment.languages.keys.to_a) %>
            <% end %>
          </div>
        </div>
        <div class="row">
          <div class="large-6 columns">
            <%= f.label :deadline do %>Deadline
              <%= f.text_field :deadline, id: 'deadlineDateTimePicker' %>
            <% end %>
          </div>
          <div class="large-6 columns">
            <%= f.label :grace_period do %>Grace period
              <%= f.text_field :grace_period, id: 'gracePeriodDateTimePicker' %>
            <% end %>
          </div>
        </div>
        <div class="row">
          <div class="large-6 columns">
            <%= f.check_box :is_team_mode %>
            <%= f.label :is_team_mode do %>Are students in teams?<% end %>
          </div>
          <div class="large-6 columns">
            <%= f.check_box :is_published %>
            <%= f.label :is_published do %>To publish the assignment now, please check the box.<% end %>
          </div>
        </div>
        <div class="row">
          &nbsp;
        </div>
        <div class="row">
          <div class="large-10 columns">
            &nbsp;
          </div>
          <div class="large-2 columns">
            <%= f.button 'Save', :class => 'tiny ', :type => 'submit' %>
            <%= link_to 'Cancel', :back, class: "radius button tiny secondary right" %>
          </div>
        </div>
      </form>
    </div>
  </div>
<% end %>
